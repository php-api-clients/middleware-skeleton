{
  "name": "api-clients/middleware-skeleton",
  "license": "MIT",
  "require": {
    "php": "^7.0",
    "api-clients/middleware": "^1.0",
    "composer/composer": "^1.3",
    "nikic/php-parser": "^3.0",
    "ocramius/package-versions": "^1.1",
    "ringcentral/psr7": "^1.2",
    "symfony/console": "^3.2"
  },
  "require-dev": {
    "api-clients/test-utilities": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "ApiClients\\Middleware\\Installer\\": "installer/",
      "ApiClients\\Middleware\\Skeleton\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ApiClients\\Tests\\Middleware\\Skeleton\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "ensure-installed": "composer install --ansi -n -q",
    "cs": [
      "@ensure-installed",
      "phpcs --standard=PSR2 src/"
    ],
    "unit": [
      "@ensure-installed",
      "phpunit --colors=always -c phpunit.xml.dist --coverage-text --coverage-html covHtml"
    ],
    "qa-all": [
      "@cs",
      "@unit"
    ],
    "qa-windows": [
      "@cs",
      "@unit"
    ],
    "qa-ci": [
      "@qa-all"
    ],
    "qa-ci-windows": [
      "@qa-windows"
    ],
    "qa-contrib": [
      "@qa-all"
    ],
    "ci-coverage": [
      "if [ -f ./build/logs/clover.xml ]; then wget https://scrutinizer-ci.com/ocular.phar && php ocular.phar code-coverage:upload --format=php-clover ./build/logs/clover.xml; fi"
    ],
    "post-create-project-cmd": [
      "composer update",
      "composer remove composer/composer nikic/php-parser ocramius/package-versions symfony/console",
      "composer update"
    ]
  }
}
